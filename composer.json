{
    "name": "emonkak/http-middleware",
    "description": "A library for web framework building that uses HTTP Middleware",
    "license": "MIT",
    "authors": [
        {
            "name": "Shota Nozaki",
            "email": "emonkak@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "emonkak/http-exception": "^1.0",
        "emonkak/router": "^0.1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Emonkak\\HttpMiddleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Emonkak\\HttpMiddleware\\Tests\\": "tests/"
        }
    }
}
